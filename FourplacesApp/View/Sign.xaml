<?xml version="1.0" encoding="UTF-8"?>
    <mvvm:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:local="clr-namespace:FourplacesApp"
                      xmlns:models="clr-namespace:FourplacesApp.Model"
                      xmlns:mvvm="clr-namespace:Storm.Mvvm.Forms;assembly=Storm.Mvvm.Forms"
                      xmlns:vm="clr-namespace:FourplacesApp.ViewModel"
                      x:Class="FourplacesApp.Sign"
                      x:DataType="vm:SignViewModel"
                      >

        
<!--       
        {
  "email": "string",
  "first_name": "string",
  "last_name": "string",
  "password": "string"
}
        -->
            <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Mail" />
                <Entry Text="{Binding EMail}"
                       Placeholder="Mail" />
            
                <Entry Text="{Binding Password1}"
                       Placeholder="Password"
                       IsPassword="True" />
            
            <Entry Text="{Binding Password2}"
                       Placeholder="Password"
                       IsPassword="True" />
            
                <Label Text="{Binding BadCredentials}" 
                       IsVisible="{Binding BadLogin}" 
                       TextColor="Red" />
            </StackLayout>
            <Button Grid.Row="2" Text="Auth" />
        </Grid>
</mvvm:BaseContentPage>